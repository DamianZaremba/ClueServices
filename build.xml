<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="ClueServices">
	<property name="src" value="src"/>
	<property name="build" value="build"/>
	<property name="bin" value="bin"/>

	<path id="ClueServices.classpath">
		<pathelement location="bin"/>
		<pathelement location="lib"/>
		<pathelement location="lib/inject-16.jar"/>
		<pathelement location="lib/javamail-141.jar"/>
		<pathelement location="lib/resin.jar"/>
	</path>

	<target name="init">
		<mkdir dir="${build}"/>
		<mkdir dir="${bin}"/>
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="ClueServices.classpath"/>
		</javac>
	</target>

	<target name="build" depends="compile">
		<!--<jar destfile="${bin}/clueservices.jar" basedir="${build}">
			<manifest>
				<attribute name="Main-Class" value="org.cluenet.clueservices.core.ClueServices" />
			</manifest>
		</jar>-->
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>

	<target name="CgiQuercus">
		<java classname="com.caucho.quercus.CgiQuercus" failonerror="true" fork="yes">
			<classpath refid="ClueServices.classpath"/>
		</java>
	</target>
</project>
