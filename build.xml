<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="ClueServices">
	<property environment="env"/>
	<property name="debuglevel" value="source,lines,vars"/>
	<property name="target" value="1.5"/>
	<property name="source" value="1.5"/>
	<path id="ClueServices.classpath">
		<pathelement location="bin"/>
		<pathelement location="lib"/>
		<pathelement location="lib/inject-16.jar"/>
		<pathelement location="lib/javamail-141.jar"/>
		<pathelement location="lib/resin.jar"/>
	</path>
	<target name="init">
		<mkdir dir="bin"/>
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src">
				<exclude name="**/*.launch"/>
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	</target>
	<target name="clean">
		<delete dir="bin"/>
	</target>
	<target depends="clean" name="cleanall"/>
	<target depends="build-subprojects,build-project,build-jar" name="build"/>
	<target name="build-subprojects"/>
	<target depends="init" name="build-project">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
			<src path="src"/>
			<classpath refid="ClueServices.classpath"/>
		</javac>
	</target>
	<target description="compile project with Eclipse compiler" name="build-eclipse-compiler">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
		<antcall target="build"/>
	</target>
	<target name="CgiQuercus">
		<java classname="com.caucho.quercus.CgiQuercus" failonerror="true" fork="yes">
			<classpath refid="ClueServices.classpath"/>
		</java>
	</target>
	<target name="build-jar">
		<jar destfile="bin/clueservices.jar" basedir="." includes="**/*.class">
			<manifest>
				<attribute name="Main-Class" value="org.cluenet.clueservices.core.ClueServices" />
			</manifest>
		</jar>
	</target>
</project>
